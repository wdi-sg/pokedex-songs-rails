  <body>
    <header>
      <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/genres">All Genres</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/songs">All Songs</a>
          </li>
          <li class="nav-item active">
