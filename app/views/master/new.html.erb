<%= form_with scope: :master, url: master_path, local: true do |form| %>


  <%= form.collection_select :pokemon_id, @pokemons, :id, :name %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_area :name %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

